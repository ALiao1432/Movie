<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/detail_info_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/foreground_ripple"
    app:cardCornerRadius="@dimen/holder_main_card_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/episodeNameText"
            style="@style/AppTheme.mainContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="episodeNameText" />

        <TextView
            android:id="@+id/episodeNumText"
            style="@style/AppTheme.mainContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodeNameText"
            tools:text="episodeNumText" />

        <TextView
            android:id="@+id/episodeAirDateTExt"
            style="@style/AppTheme.mainContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/episodeNumText"
            app:layout_constraintTop_toBottomOf="@+id/episodeNameText"
            tools:text="episodeAirDateTExt" />

        <TextView
            android:id="@+id/episodeOverviewText"
            style="@style/AppTheme.subContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_info_margin"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/episodeNumText"
            tools:text="episodeOverviewText" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
