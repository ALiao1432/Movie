<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Launcher" >
        <item name="android:windowBackground">@drawable/vd_launcher_movie</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.mainContentText" parent="AppTheme">
        <item name="android:textSize">@dimen/detail_main_content_text_size</item>
        <item name="android:textColor">@color/mainContent</item>
        <item name="android:layout_marginStart">@dimen/detail_info_margin</item>
        <item name="android:layout_marginTop">@dimen/detail_info_margin</item>
        <item name="android:layout_marginEnd">@dimen/detail_info_margin</item>
    </style>

    <style name="AppTheme.subContentText" parent="AppTheme.mainContentText">
        <item name="android:textSize">@dimen/detail_sub_content_text_size</item>
        <item name="android:textColor">@color/childContent</item>
    </style>

    <style name="AppTheme.genreKeywordButton" parent="AppTheme">
        <item name="android:layout_height">@dimen/genre_keyword_btn_height</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/background_ripple</item>
        <!--<item name="android:background">@drawable/shape_genre_keyword_btn</item>-->
        <!--<item name="android:foreground">@drawable/foreground_ripple</item>-->
        <item name="android:textColor">@color/genreKeywordBtnText</item>
        <item name="android:textSize">@dimen/genre_keyword_btn_text_size</item>
    </style>

</resources>
