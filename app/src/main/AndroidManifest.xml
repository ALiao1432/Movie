<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="study.ian.movie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vd_movie"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vd_movie"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PersonImageActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SeasonDetailActivity" />
        <activity android:name=".MovieDetailActivity" />
        <activity android:name=".TvShowDetailActivity" />
        <activity android:name=".PersonDetailActivity" />
    </application>

</manifest>